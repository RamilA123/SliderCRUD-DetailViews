@model List<CategoryVM>
@{
    ViewData["Title"] = "Categories";
}

<div class="container my-3">
    <h2 class="text-center">Categories</h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Options
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="py-1">
                            @item.Name
                        </td>
                        <td>
                            <form method="post" asp-action="ExtractCategory" asp-route-id="@item.Id" style="display:inline-block">
                                <button type="submit" class="btn btn-primary btn-rounded btn-fw">Extract</button>
                            </form>
                            <form method="post" asp-action="Delete" asp-route-id="@item.Id" style="display:inline-block">
                                <button type="submit" class="btn btn-danger btn-rounded btn-fw">Delete</button>
                            </form>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>



@model SliderInfoEditVM
@{
    ViewData["Title"] = "Edit";
}

<div class="container my-5">
    <form method="post" asp-action="Update" enctype="multipart/form-data">
        <input asp-for="NewImage" class="form-control" />
        <span class="text-danger d-block" asp-validation-for="NewImage"></span>



        <input asp-for="Title" class="form-control" maxlength="" />
        <span class="text-danger d-block" asp-validation-for="Title"></span>



        <input asp-for="Info" class="form-control" maxlength="" />
        <span class="text-danger d-block" asp-validation-for="Info"></span>
        <button type="submit" class="btn btn-success btn-rounded btn-fw mt-3">Submit</button>
        <a asp-action="Index" class="btn btn-primary btn-rounded btn-fw mt-3">Back</a>
    </form>
</div>

@model List<ProductVM>
@{
    ViewData["Title"] = "Index";
}

<div class="container my-3">
    <h2 class="text-center">Categories</h2>
    <div class="create-btn ">
        <a asp-action="Create" class="btn btn-success btn-rounded btn-fw">Create</a>
    </div>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Discount
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Options
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="py-1">
                            <img src="~/img/@item.Image" style="width:100px; height:150px; border-radius:0;"/>
                        </td>
                        <td class="py-1">
                            @item.Name
                        </td>
                        <td class="py-1">
                            @item.Description
                        </td>
                        <td class="py-1">
                            @item.Price
                        </td>
                        <td class="py-1">
                            @item.Discount
                        </td>
                        <td class="py-1">
                            @item.CategoryName
                        </td>
                        <td>
                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary btn-rounded btn-fw">Detail</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-rounded btn-fw">Edit</a>
                            <form method="post" asp-action="SoftDelete" asp-route-id="@item.Id" style="display:inline-block">
                                <button type="submit" class="btn btn-inverse-secondary btn-rounded btn-fw">Delete</button>
                            </form>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

